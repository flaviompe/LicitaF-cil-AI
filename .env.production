# =============================================================================
# PRODUCTION DEPLOYMENT CONFIGURATION - VERCEL
# =============================================================================

# Environment
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# =============================================================================
# DATABASE (NEON POSTGRESQL)
# =============================================================================
# Replace with your actual Neon database URL
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-2.aws.neon.tech/licitacoes_prod?sslmode=require
DIRECT_URL=postgresql://username:password@ep-example-123456.us-east-2.aws.neon.tech/licitacoes_prod?sslmode=require

# =============================================================================
# AUTHENTICATION
# =============================================================================
NEXTAUTH_URL=https://your-app.vercel.app
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-key-change-this

# =============================================================================
# ESSENTIAL FEATURES
# =============================================================================
# OpenAI for Legal AI (get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email notifications (Gmail recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Telegram notifications (create bot: @BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# External Government APIs
COMPRASNET_API_URL=https://api.comprasnet.gov.br
SICAF_API_URL=https://api.sicaf.gov.br

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
ENABLE_ANALYTICS=true
ENABLE_QUERY_CACHE=true
CACHE_TTL=300
LOG_LEVEL=info

# =============================================================================
# SECURITY
# =============================================================================
CORS_ORIGIN=https://your-app.vercel.app
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_SECURITY_HEADERS=true

# =============================================================================
# FILE UPLOADS
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads